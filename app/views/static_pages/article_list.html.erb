<%= render :partial => "static_pages/panel" %>
<div style="margin-left:170px;margin-top:120px;">

  <h2>Makaleler</h2>
<hr>
<form method="post" action="">
  <table style="margin-left:20px;margin-top: 30px" class="table table-hover" >
    <thead>
    <tr>
      <th></th>
      <th>Başlık</th>
      <th>Yayınlanma zamanı</th>
      <td></td>
    </tr>
    </thead>

    <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><% article %></td>
          <td><%= link_to article.title,article %></td>
          <td><%= article.post_time %></td>
          <td><%= link_to 'Sil', article, method: :delete,data: { confirm: 'Silmek istediğinize emin misiniz?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</form>
    </div>