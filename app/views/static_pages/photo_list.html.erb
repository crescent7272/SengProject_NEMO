<%= render :partial => "static_pages/panel" %>

<div style="margin-left:170px;margin-top:120px;">
  <h2>Fotoğraflar</h2>
<hr>
<table align="center" style="margin-top: 30px;" id="categoryTable">
  <% i=12 %>
  <% @categories.each do |category| %>
  <tr>
    <td><h3><%= category.title %></h3></td>
  </tr>
  <tr>
    <% @photos.each do |photo| %>

        <% if photo.category_id == category.id  %>
    <td style="padding:5px;">
        <img style="height:100px;" alt="<%= photo.id %>" src="/assets/<%=category.id %>/<%= photo.id %>.png"/><br>
        <p><%= photo.title%></p>
        <td><%= link_to 'Sil', photo, method: :delete,data: { confirm: 'Silmek istediğinize emin misiniz?' } %></td>

      <% i += 1%>
    </td>

        <%end%>
        <%end%>
  </tr>
      <%end%>
</table>

</div>